{
  "manifest_version": 3,
  "name": "chrome-test",
  "description": "学习插件",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "cookies",
    "tabs",
    "desktopCapture",
    "storage",
    "tabCapture",
    "activeTab",
    "identity",
    "scripting"
  ],
  "host_permissions": [
    "*://*/*",
    "<all_urls>"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "./dist/background.js"
  }
}